{
    "manifest_version": 2,
    "name": "Text Translator",
    "version": "1.0",
    "description": "Traduce texto seleccionado usando Google Translate.",
    "permissions": ["contextMenus", "notifications", "activeTab"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": [
        {"size": 16, "file": "icon.png", "src": "icon.png"},
        {"size": 48, "file": "icon.png", "src": "icon.png"},
        {"size": 128, "file": "icon.png", "src": "icon.png"}
    ]
}
